generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?  
  createdAt DateTime @default(now())

  tasks     Task[]
  sessions  PomodoroSession[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  deadline    DateTime?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}

model PomodoroSession {
  id         String   @id @default(uuid())
  startTime  DateTime
  endTime    DateTime
  isBreak    Boolean
  createdAt  DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}
